<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!--顶部logo-->
    <ImageView
        android:id="@+id/login_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="119dp"
        android:src="@mipmap/login_logo" />

    <ImageView
        android:id="@+id/login_id_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/line_1"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="@dimen/left_to_parent"
        android:layout_marginRight="@dimen/login_right_to_wight"
        android:src="@mipmap/login_id" />

    <!--企业ID-->
    <EditText
        android:id="@+id/company_id_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/line_1"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="24dp"
        android:layout_toRightOf="@+id/login_id_logo"
        android:background="@null"
        android:hint="企业ID"
        android:inputType="number"
        android:maxLength="11"
        android:maxLines="1"
        android:textColorHint="#999999"
        android:textSize="16sp" />

    <!--分割线-->
    <TextView
        android:id="@+id/line_1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/login_logo"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="112dp"
        android:background="#999999" />

    <ImageView
        android:id="@+id/login_phone_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/line_2"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="@dimen/left_to_parent"
        android:layout_marginRight="20dp"
        android:src="@mipmap/login_pho" />

    <!--手机号-->
    <EditText
        android:id="@+id/login_phone_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/line_2"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="@dimen/left_to_parent"
        android:layout_toRightOf="@+id/login_phone_logo"
        android:background="@null"
        android:hint="手机号"
        android:inputType="number"
        android:maxLength="11"
        android:maxLines="1"
        android:textColorHint="#999999"
        android:textSize="16sp" />

    <Button
        android:id="@+id/login_request_code_btn"
        android:layout_width="56dp"
        android:layout_height="22dp"
        android:layout_alignBottom="@+id/login_phone_et"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/left_to_parent"
        android:background="@drawable/shape_login_un"
        android:padding="5dp"
        android:text="获取验证码"
        android:textColor="#ffffff"
        android:textSize="9sp" />

    <!--分割线-->
    <TextView
        android:id="@+id/line_2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/line_1"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="64dp"
        android:background="#999999" />

    <ImageView
        android:id="@+id/login_code_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/line_3"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="@dimen/left_to_parent"
        android:layout_marginRight="20dp"
        android:src="@mipmap/login_code" />

    <EditText
        android:id="@+id/login_code_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/line_3"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="@dimen/left_to_parent"
        android:layout_toRightOf="@+id/login_phone_logo"
        android:background="@null"
        android:hint="验证码"
        android:inputType="number"
        android:maxLength="6"
        android:maxLines="1"
        android:textColorHint="#999999"
        android:textSize="16sp" />

    <!--分割线-->
    <TextView
        android:id="@+id/line_3"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/line_2"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="64dp"
        android:background="#999999" />

    <Button
        android:id="@+id/login_btn"
        android:layout_width="312dp"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="56dp"
        android:background="@drawable/shape_login"
        android:text="登录"
        android:textColor="#ffffff"
        android:textSize="18sp" />

</RelativeLayout>